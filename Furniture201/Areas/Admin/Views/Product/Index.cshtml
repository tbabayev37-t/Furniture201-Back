@model List<Furniture201.Models.Product>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container">
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">ImageName</th>
                    <th scope="col">ImageUrl</th>
                    <th scope=" col">Actions</th>
                    <th scope="col">Activeness</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.ImageName</td>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.Name" width="80" />
                        </td>
						<td>
						@item.IsDeleted
                        </td>
                        <td>

                             <a class="btn btn-warning"asp-area="admin" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a> 
							@* <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"> Update</a> *@
                            <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger"> Delete</button>
                            </form>
                            <a asp-action="SoftDelete" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
